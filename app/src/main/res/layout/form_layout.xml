<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fafafa"
    android:paddingRight="10dp"
    android:paddingLeft="10dp">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        app:srcCompat="@mipmap/bg2" />

    <ImageView
        android:id="@+id/btn_back2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="3dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="13dp"
        app:srcCompat="@drawable/ic_back" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btn_back2"
        android:layout_centerHorizontal="true"
        android:text="Form"
        android:textColor="#2D9CDB"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edt_ques"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/edt_ans1"
        android:layout_marginBottom="15dp"
        android:layout_centerInParent="true"
        android:ems="10"
        android:hint="Question"
        android:inputType="textMultiLine" />

    <EditText
        android:id="@+id/edt_ans1"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/edt_ans2"
        android:layout_centerInParent="true"
        android:layout_marginBottom="16dp"
        android:ems="10"
        android:hint="A"
        android:inputType="textMultiLine" />

    <EditText
        android:id="@+id/edt_ans2"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/edt_ans3"
        android:layout_centerInParent="true"
        android:layout_marginBottom="11dp"
        android:ems="10"
        android:hint="B"
        android:inputType="textMultiLine" />

    <EditText
        android:id="@+id/edt_ans3"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/spinner"
        android:layout_centerInParent="true"
        android:layout_marginBottom="11dp"
        android:ems="10"
        android:hint="C"
        android:inputType="textMultiLine" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_submit"
        android:layout_centerInParent="true"
        android:layout_marginBottom="27dp"
        android:theme="@style/Theme.AppCompat.Light"/>

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="103dp"
        android:background="@drawable/white_corner"
        android:elevation="15dp"
        android:text="Submit"
        android:textColor="#2d9cdb"
        android:textSize="16sp"
        android:textStyle="bold" />


</RelativeLayout>